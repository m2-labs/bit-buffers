{
  "name": "bit-buffer",
  "version": "1.0.0",
  "description": "An incredibly simple bit buffer (aka bit-string) implementation.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/m2-labs/bit-buffer",
  "repository": {
    "type": "git",
    "url": "https://github.com/m2-labs/bit-buffer.git"
  },
  "author": {
    "name": "M2 Labs",
    "url": "https://m2.xyz"
  },
  "contributors": [
    {
      "name": "Brice Stacey",
      "email": "brice@m2.xyz"
    },
    {
      "name": "Matt Venables",
      "email": "matt@m2.xyz"
    }
  ],
  "scripts": {
    "build": "npm run clean; swc lib -d dist",
    "build:watch": "swc lib -d dist --watch --quiet",
    "clean": "rm -rf dist",
    "dev": "run-p build:watch start:dev --silent",
    "format": "prettier  --write .",
    "lint": "eslint . --ext .ts",
    "prepublish": "npm run build",
    "start": "node dist/index.js",
    "start:dev": "nodemon \"./dist/index.js\" --watch dist --quiet",
    "test": "jest",
    "type-check": "tsc --pretty --noEmit"
  },
  "license": "ISC",
  "devDependencies": {
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.121",
    "@swc/jest": "^0.2.15",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.19",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
